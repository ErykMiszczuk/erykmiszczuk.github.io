---
import HeaderLink from "./HeaderLink.astro";
import LanguageSwitcher from "./LanguageSwitcher.astro";

import { SITE_TITLE } from "../consts";
---

<header>
  <nav class="main-nav">
    <h2 class="site-logo">
      <a href="/en" class="site-logo__link">{SITE_TITLE}</a>
    </h2>
    <div class="internal-links">
      <HeaderLink href="/en/">Home</HeaderLink>
      <HeaderLink href="/en/blog">Blog</HeaderLink>
    </div>
    <div class="user-settings">
      <LanguageSwitcher />
    </div>
  </nav>
</header>
<style>
  .main-nav {
    margin: 0px 2rem;
    padding: 0 1rem;
    border-color: var(--white);
    border-bottom-style: solid;
    border-width: 3px;
    display: grid;
    grid-template-columns: 1fr 2fr 1fr;
  }
  .site-logo__link {
    font-size: 2rem;
    text-decoration: none;
    color: var(--white);
  }
  .internal-links {
    display: flex;
    justify-content: center;
  }
</style>
