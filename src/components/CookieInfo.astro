<div class="cookie-info">
  <span class="cookie-info__text">Do you want some cookies?</span>
  <div class="cookie-info__actions">
    <button class="cookie-info__button">No thanks</button>
    <button class="cookie-info__button">Let me choose</button>
    <button class="cookie-info__button">All of them</button>
  </div>
</div>

<style>
  .cookie-info {
    display: flex;
    gap: 1rem;
    align-items: center;
    position: sticky;
    bottom: 1rem;
    margin: 1rem -1rem;
    padding: 1rem 2rem;
    border-radius: 1rem;
    background-color: var(--main-background);
    -webkit-box-shadow: 0px 0px 10px -5px var(--secondary-background);
    -moz-box-shadow: 0px 0px 10px -5px var(--secondary-background);
    box-shadow: 0px 0px 10px -5px var(--secondary-background);
  }

  .cookie-info__text {
    flex-grow: 1;
  }

  .cookie-info__actions {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .cookie-info__button {
    font-size: 1rem;
    padding: 0.75rem 1rem;
    border-radius: 3rem;
    border: 2px solid var(--main-text);
    background-color: var(--main-background);
    color: var(--main-text);
  }

  .cookie-info__button:hover {
    background-color: var(--accent);
  }

  @media (max-width: 720px) {
    .cookie-info {
      flex-direction: column;
      margin: 0.25rem;
      gap: 0.25rem;
    }

    .cookie-info__actions {
      gap: 0.25rem;
    }
  }
</style>
